{
  "name": "BitField",
  "version": "0.0.1",
  "license": "MIT",
  "description": "",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/name/repo.git"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean & webpack --optimize-minimize --optimize-occurence-order",
    "build:dev": "webpack --debug --devtool inline-source-map --output-pathinfo",
    "build:watch": "npm run build:dev -- --watch",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "mocha tests --compilers js:babel-register",
    "test:watch": "npm run test -- --reporter min -w",
    "prepublish": "npm run clean & npm run build",
    "run": "npm run lint && node dist"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.0.16",
    "babel-preset-es2015": "^6.16.0",
    "chai": "^3.5.0",
    "eslint": "^2.7.0",
    "eslint-config-xo": "^0.16.0",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "babel-polyfill"
    ]
  },
  "eslintConfig": {
    "extends": "xo/esnext",
    "rules": {
      "no-unused-vars": 1,
      "space-before-function-paren": 0,
      "babel/object-curly-spacing": [
        2,
        "always",
        {
          "objectsInObjects": false
        }
      ]
    },
    "env": {
      "mocha": true
    }
  }
}
